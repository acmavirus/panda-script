# Panda Panel v3.1.0 - Unified Installer
# Includes: CLI Menu + Web Panel + Scripts
#================================================

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${CYAN}â•‘       ğŸ¼ PANDA SCRIPT v3.1.0 INSTALLER       â•‘${NC}"
echo -e "${CYAN}â•‘       High Performance LEMP + Panel v3.1.0   â•‘${NC}"
echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""

# Check root
if [[ $EUID -ne 0 ]]; then
   echo -e "${RED}Error: This script must be run as root${NC}" 
   exit 1
fi

# Detect Architecture
ARCH=$(uname -m)
case $ARCH in
    x86_64) ARCH_OK=true ;;
    aarch64) echo -e "${RED}ARM64 support coming soon.${NC}"; exit 1 ;;
    *) echo -e "${RED}Unsupported architecture: $ARCH${NC}"; exit 1 ;;
esac

INSTALL_DIR="/opt/panda"
REPO_URL="https://github.com/acmavirus/panda-script.git"

#================================================
# Step 1: Install dependencies
#================================================
echo -e "${BLUE}[1/5] Installing dependencies...${NC}"
if command -v apt-get &>/dev/null; then
    apt-get update -qq
    apt-get install -y curl git sqlite3 unzip jq &>/dev/null || apt-get install -y curl git sqlite3 unzip
elif command -v dnf &>/dev/null; then
    dnf install -y curl git sqlite || dnf install -y curl git sqlite3
fi

#================================================
# Step 2: Clone repository
#================================================
echo -e "${BLUE}[2/5] Cloning Panda Script repository...${NC}"
if [ -d "$INSTALL_DIR" ]; then
    echo "Updating existing installation..."
    cd "$INSTALL_DIR"
    git pull origin main 2>/dev/null || { rm -rf "$INSTALL_DIR"; git clone "$REPO_URL" "$INSTALL_DIR"; }
else
    git clone "$REPO_URL" "$INSTALL_DIR"
fi

#================================================
# Step 3: Setup directories and permissions
#================================================
echo -e "${BLUE}[3/5] Setting up directories...${NC}"
mkdir -p "$INSTALL_DIR/data"
mkdir -p "$INSTALL_DIR/logs"
mkdir -p "$INSTALL_DIR/databases"
mkdir -p "$INSTALL_DIR/backups"
mkdir -p /etc/panda
mkdir -p /var/log/panda

# Set permissions for CLI scripts
chmod +x "$INSTALL_DIR/menu/"*.sh 2>/dev/null || true
chmod +x "$INSTALL_DIR/modules/"**/*.sh 2>/dev/null || true
chmod +x "$INSTALL_DIR/core/"*.sh 2>/dev/null || true

#================================================
# Step 4: Setup Panel binary
#================================================
echo -e "${BLUE}[4/5] Setting up Panel binary...${NC}"
PANEL_BINARY="$INSTALL_DIR/v3/panda-linux"
if [ -f "$PANEL_BINARY" ]; then
    chmod +x "$PANEL_BINARY"
    ln -sf "$PANEL_BINARY" /usr/local/bin/panda-panel
fi

# Create symlink for CLI
ln -sf "$INSTALL_DIR/menu/main.sh" /usr/local/bin/panda

#================================================
# Step 5: Setup systemd service
#================================================
echo -e "${BLUE}[5/5] Setting up systemd service...${NC}"
cat > /etc/systemd/system/panda.service <<EOF
[Unit]
Description=Panda Panel v3
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=$INSTALL_DIR/v3
ExecStart=$INSTALL_DIR/v3/panda-linux serve
Restart=always
RestartSec=5
Environment=GIN_MODE=release

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable panda
systemctl restart panda

# Wait for startup
sleep 2

# Get public IP
PUBLIC_IP=$(curl -s https://ifconfig.me 2>/dev/null || hostname -I | awk '{print $1}')

# Check if panel is running
if curl -s http://localhost:8888/api/health >/dev/null 2>&1; then
    PANEL_PORT=8888
elif curl -s http://localhost:8080/api/health >/dev/null 2>&1; then
    PANEL_PORT=8080
else
    PANEL_PORT=8888
fi

echo ""
echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${GREEN}âœ… Panda Script v3.1.0 installed successfully!${NC}"
echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""
echo -e "${CYAN}ğŸŒ Web Panel:${NC}  http://${PUBLIC_IP}:${PANEL_PORT}/panda"
echo -e "${CYAN}ğŸ”‘ Login:${NC}      admin / admin"
echo -e "${CYAN}ğŸ’» CLI Menu:${NC}   panda"
echo ""
echo -e "${YELLOW}Quick Commands:${NC}"
echo -e "  panda              - Open CLI menu"
echo -e "  panda-panel serve  - Start panel manually"
echo -e "  systemctl status panda - Check panel status"
echo ""
echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
